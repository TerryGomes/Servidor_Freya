        <CanDelete set="true"/>							<!-- удалять NPC -->
        <CanKick set="true"/>							<!-- Может ли ГМ "кикать с игры" -->
        <Menu set="true"/>
        <GodMode set="true"/>							<!-- Может ли ГМ включать неуязвимость -->
        <CanEditCharAll set="true"/>					<!-- Может ли гм редактировать персонажей -->
